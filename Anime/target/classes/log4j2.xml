<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSSZZ} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <Appender>
        <File name="File" class="ch.qos.logback.core.FileAppender" immediateFlush="false" append="true">
            <file>logs/application.log</file>
            <PatternLayout pattern="${LOG_PATTERN}" charset="UTF-8"/>
        </File>
    </Appender>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="File"/>
        </Root>

        <Logger name="com.review.anime.Controller" level="debug" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="com.review.anime" level="debug" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>